#!/bin/bash

[ -s "$PWD/config" ] || \
(echo 'From the script directory, run: data/debian/download_metadata'; exit)
. $PWD/config # import config

DIR="${DIRECTORY[data]}/debian"

rsync -avmz --include "Packages.gz" --include "Sources.gz" --include "Release" --include "*/" --exclude "*" ftp.br.debian.org::debian/dists $DIR
rsync -avmz --include "*.list.gz" --include "*/" --exclude "*" ftp.br.debian.org::debian-cd/5.0.6 $DIR
rsync -avmz --include "*.packages" --include "*/" --exclude "*" ftp.br.debian.org::debian-cd/5.0.6-live $DIR

